<p>
  <label for="{{title_id}}">Title</label>
  <br><br>
  <input class="widefat" type="text" name="{{title_name}}" id="{{title_id}}" value="{{title}}" />
</p>

<p>
  <label for="{{description_id}}">Description</label>
  <br><br>
  <textarea class="widefat" name="{{description_name}}" id="{{description_id}}" >{{description}}</textarea>
</p>

<p>
  <label for="{{timezone_id}}">Timezone</label>
  <br><br>
  <select name="{{timezone_name}}" id="{{timezone_id}}">
    {{#timezones}}
      <option {{# selected}} selected="selected" {{/ selected}} value="{{value}}">{{value}}</option>
    {{/timezones}}
  </select>
</p>

<label for="dates">Dates</label>
<table class="dates-multi">
  {{#dates}}
    <tr class="data-row">
      <td>
        <input class="datepicker widefat" id="{{dates_id}}-{{cnt}}" type="text" name="{{dates_name}}[]" value="{{value}}">
      </td>

      <td class="td-add">
        <a href="#" class="dates-add">Add</a>
      </td>
      <td class="td-remove">
        <a href="#" class="dates-remove">Remove</a>
      </td>
    </tr>
  {{/dates}}
</table>


<table class="dates-clone" style="display:none">
  <tr class="data-row">
    <td>
      <input class="datepicker" type="text" name="{{dates_name}}[]" value="{{value}}">
    </td>

    <td class="td-add">
      <a href="#" class="dates-add">Add</a>
    </td>
    <td class="td-remove">
      <a href="#" class="dates-remove">Remove</a>
    </td>
  </tr>
</table>
